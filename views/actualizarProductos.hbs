<h1 class="text-center">Editar Producto</h1>

<div class="container">
    <form action="/products/update/{{_id}}" method="patch">
        <div class="mb-3">
            <label for="title" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="title" name="title" value="{{title}}" required>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Precio</label>
            <input type="number" class="form-control" id="price" name="price" value="{{price}}" required>
        </div>
        <div class="mb-3">
            <label for="stock" class="form-label">Stock</label>
            <input type="number" class="form-control" id="stock" name="stock" value="{{stock}}" required>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Url imagen</label>
            <input type="text" class="form-control" id="image" name="image" value="{{image}}" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Descripci√≥n</label>
            <input type="text" class="form-control" id="description" name="description" value="{{description}}" required>
        </div>
        <div class="text-center m-4">
            <button type="submit" class="btn btn-success w-50">Actualizar Producto</button>
        </div>
    </form>
</div>
