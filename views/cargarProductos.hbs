<h1 class="text-center mt-5">
    Cargamos Productos
</h1>


<div class="container">
    <form action="/cargarProductos" method="post">
        <div class="mb-3">
            <label for="title" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="title" name="title" required>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Precio</label>
            <input type="number" class="form-control" id="price" name="price" required>
        </div>
        <div class="mb-3">
            <label for="stock" class="form-label">Stock</label>
            <input type="number" class="form-control" id="stock" name="stock" required>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Url imagen</label>
            <input type="text" class="form-control" id="image" name="image" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Descripcion</label>
            <input type="text" class="form-control" id="description" name="description" required>
        </div>
        <div class="text-center m-4">
            <button type="submit" class="btn btn-success w-50">Cargar Producto</button>
        </div>
        <div class="text-center m-4">
            <button type="reset" class="btn btn-danger w-50">Borrar Datos</button>
        </div>
    </form>
</div>